<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SearchStudy" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>

    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">false</item>                                          <!-- 다이얼 로그가 자식만크의 크기를 가질지 아니면 전체화면을 사용할지-->
        <item name="android:windowBackground">@android:color/transparent</item>                     <!-- 배경 색-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>    <!-- 상태바 색 설정-->
        <item name="android:backgroundDimEnabled">true</item>                                       <!-- 다이얼로그 바깥쪽 색 설정-->
        <item name="android:windowFullscreen">false</item>                                          <!-- full 스크린 화면 상단의 상태바까지 없어짐-->
<!--        <item name="android:backgroundDimEnabled">false</item>-->
<!--        <item name="android:windowNoTitle">true</item>-->
